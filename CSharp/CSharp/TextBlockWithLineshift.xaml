<UserControl x:Class="CSharp.TextBlockWithLineshift"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!--Use &#x0a; for lineshift-->
        <TextBlock Height="60" Width="100" Text="TextBlock with&#x0a;lineshift."/>

        <!--Use <LineBreak/> for lineshift-->
        <TextBlock Height="60" Width="100">
            TextBlick with<LineBreak/>
            lineshift
        </TextBlock>
    </StackPanel>
</UserControl>
