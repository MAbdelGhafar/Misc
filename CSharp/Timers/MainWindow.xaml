<Window x:Class="Timers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timers"
        mc:Ignorable="d"
        Title="Timers" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Height="25" Width="300"
                   Text="{Binding SystemThreadingTimer.TimerData}" />

        <TextBlock Grid.Row="1" Height="25" Width="300"
                   Text="{Binding SystemTimersTimer.TimerData}" />

        <TextBlock Grid.Row="2" Height="25" Width="300"
                   Text="{Binding SystemWindowsFormsTimer.TimerData}" />
    </Grid>
</Window>
